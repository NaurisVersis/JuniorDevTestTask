{% include "head.html.twig" %}

<body class="container">

<div class="header row mt-3 border-bottom border-2 p-3 align-middle">
    <h1 class="col">Add product</h1>
    <div class="col-md-3 text-end">
        <button type="submit" form="product_form" value="Save" class=" btn btn-lg btn-success">Save</button>
        <a href="/" class="btn btn-lg btn-danger " role="button">CANCEL</a>
    </div>


</div>
<div class="container  mt-3 py-5">
    <div class="card ms-0 mt-3 w-50 align-items-start">
        <form action="/create-product" method="post" id="product_form" class="row ps-3">
            <div class="col mb-3 p-3">
                <label for="sku" class="form-label p-1">SKU</label>
                <input type="text" id="sku" name="sku" class="form-control" required>
                <div class="invalid-feedback">
                    Please add SKU.
                </div>

                <label for="name" class="form-label p-1">Name</label>
                <input type="text" id="name" name="name" class="form-control" required>
                <div class="invalid-feedback">
                    Please add SKU.
                </div>

                <label for="price" class="form-label p-1">Price ($)</label>
                <input type="number" min="0" step="0.01" id="price" name="price" class="form-control" required>
                <div class="invalid-feedback">
                    Please add SKU.
                </div>
            </div>
            <div class="col mb-3 p-3">
                <label for="productType" class="form-label pb-1">Type: </label>
                <select name="productType" id="productType" class="form-select" required>
                    <option value="" selected>Please select product type</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>

                <div id="attributes" class="container"></div>

            </div>
        </form>
    </div>
</div>

