<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</head>

<body class="container">
<div class="row m-3">
    <h1 class="col">Products</h1>
    <a href="/add-product" type="button" class="btn btn-success col me-3">Add Product</a>
    <button type="button" class="btn btn-danger col">MASS DELETE</button>

</div>


            <ul>
                <div class="row">

                        {% for product in products %}
                            <li class="col-2 card m-3  pt-3">
                                <div class="row">
                                    <h5 class="card-title col mb-3">{{ product.sku|e }}</h5>
                                    <input class=" col form-check-input mt-0" type="checkbox" value="" aria-label="Checkbox for deleting product">
                                </div>

                                <h6>{{ product.name|e }}</h6>
                                <p>Price: {{ product.price|e }} </p>
                                <p>Category: {{ product.category.name|e }}</p>
                                <p>Description:</p>
                                {% for attributeValue in product.attributeValues %}
                                    <p>{{ attributeValue.attribute.name|e }}: {{ attributeValue.value|e }} {{ attributeValue.attribute.unit|e }}</p>
                                {% endfor %}

                            </li>





                        {% endfor %}



                </div>
            </ul>








</body>
